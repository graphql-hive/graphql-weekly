{
  "$schema": "https://v2-8-0.turborepo.dev/schema.json",
  "ui": "stream",
  "tasks": {
    "build": {
      "dependsOn": ["^build", "codegen"],
      "outputs": ["dist/**"]
    },
    "deploy": {
      "dependsOn": ["build", "^deploy"],
      "passThroughEnv": [
        "CLOUDFLARE_API_TOKEN",
        "CLOUDFLARE_ACCOUNT_ID",
        "CLOUDFLARE_ZONE_ID"
      ]
    },
    "codegen": {
      "dependsOn": ["^codegen"],
      "inputs": [
        "src/schema.graphql",
        "src/**/*.graphql",
        "graphql-codegen.ts"
      ],
      "outputs": ["src/generated/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["codegen"],
      "inputs": [
        "src/**/*.ts",
        "src/**/*.test.ts",
        "vitest.config.ts",
        "wrangler.jsonc",
        "migrations/**",
        "$TURBO_DEFAULT$"
      ],
      "outputs": ["coverage/**"]
    },
    "test:e2e": {
      "cache": false,
      "dependsOn": ["build"]
    },
    "typecheck": {
      "dependsOn": ["codegen"],
      "inputs": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "tsconfig.json",
        "$TURBO_DEFAULT$"
      ]
    },
    "lint": {
      "inputs": [
        "src/**/*.{ts,tsx,mjs}",
        "../../eslint.config.mjs",
        "$TURBO_DEFAULT$"
      ]
    },
    "lint:fix": {
      "inputs": [
        "src/**/*.{ts,tsx,mjs}",
        "../../eslint.config.mjs",
        "$TURBO_DEFAULT$"
      ]
    }
  }
}
