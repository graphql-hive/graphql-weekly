    html * {
      -webkit-font-smoothing: antialiased;
      -moz-osx-font-smoothing: grayscale;
    }
  }

  body {
    font-family: 'Rubik', var(--system-font) !important;
    background: #F1F1F4;
    padding: 0;
    margin: 0;
  }

  html, * {
    box-sizing: border-box;
  }

