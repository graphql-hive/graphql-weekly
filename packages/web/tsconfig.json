{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "rootDir": ".",
    "outDir": "./dist-ts",
    "paths": {
      "#src/*": ["./src/*"]
    }
  },
  "include": ["src/**/*", "tests/**/*", "*.ts", "*.mjs", "*.mts"],
  "exclude": ["node_modules", "dist", "dist-ts", "tests/visually-same"]
}
