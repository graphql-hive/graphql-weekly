{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@/*": ["packages/web/src/*"]
    }
  },
  "include": [
    "packages/web/src/**/*",
    "*.ts",
    "*.mjs",
    "*.mts",
    "packages/web/astro.config.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
