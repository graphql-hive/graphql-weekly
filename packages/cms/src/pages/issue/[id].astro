---
import Layout from '../../layouts/Layout.astro'
import '../../index.css'
import { IssuePage } from '../../islands/issue'

// SSR page - no prerendering, ID is available at request time
const { id } = Astro.params

if (!id) {
  return Astro.redirect('/')
}
---

<Layout title="Issue - GraphQL Weekly CMS">
  <IssuePage client:load id={id} />
</Layout>
