{
  "name": "graphqlweekly-api",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "build": "yarn generate && yarn lambda:build",
    "lambda:build": "tsc -p apollo/tsconfig.json",
    "generate": "yarn generate:prisma && yarn generate:nexus",
    "generate:prisma": "prisma generate",
    "generate:nexus": "ts-node --transpile-only apollo/index"
  },
  "dependencies": {
    "@nexus/schema": "0.14.0",
    "@prisma/client": "^2.3.0",
    "apollo-server-lambda": "^2.16.0",
    "nexus-prisma": "0.12.0"
  },
  "devDependencies": {
    "@prisma/cli": "^2.3.0",
    "typescript": "^3.9.7"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  }
}
