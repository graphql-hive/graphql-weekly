{
  "name": "@gqlweekly/api",
  "version": "1.0.0",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev": "wrangler dev",
    "dev:e2e": "wrangler dev --port 2013 --env-file .dev.vars.e2e",
    "migrate:up": "wrangler d1 migrations apply graphqlweekly --local",
    "codegen": "graphql-codegen",
    "typecheck": "tsc --noEmit",
    "deploy": "wrangler deploy",
    "test": "vitest",
    "email": "email dev --dir src/email/templates",
    "format": "prettier --write .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "@better-auth/cli": "^1.4.12",
    "@mailchimp/mailchimp_marketing": "3.0.80",
    "@react-email/components": "1.0.4",
    "better-auth": "^1.4.12",
    "graphql": "16.6.0",
    "graphql-scalars": "1.20.1",
    "graphql-yoga": "5.18.0",
    "kysely": "0.28.9",
    "kysely-d1": "0.4.0",
    "react": "19.2.3",
    "react-email": "5.2.3"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "0.12.3",
    "@cloudflare/workers-types": "^4.20260124.0",
    "@graphql-codegen/cli": "6.1.1",
    "@graphql-codegen/typescript": "5.0.7",
    "@graphql-codegen/typescript-resolvers": "5.1.5",
    "@graphql-typed-document-node/core": "3.2.0",
    "@react-email/preview-server": "5.2.3",
    "@types/bun": "^1.3.6",
    "@types/node": "25.0.8",
    "@types/react": "19.2.8",
    "typescript": "5.9.3",
    "vitest": "3.2.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
